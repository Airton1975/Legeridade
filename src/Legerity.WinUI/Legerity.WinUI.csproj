<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>Legerity for WinUI - Framework for UI tests with Selenium/Appium</Product>
    <Description>
      This package is a WinUI extension for speeding up the development of automated UI tests with Selenium/Appium including:
      - MenuBar
      - MenuBarItem
      - NavigationView
      - NavigationViewItem
      - NumberBox
      - TabView
    </Description>
    <PackageTags>UI Test Appium Selenium WindowsDriver WinAppDriver Windows WinUI</PackageTags>
    <RootNamespace>Legerity.Windows.Elements.WinUI</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Appium.WebDriver" Version="5.0.0-rc.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Legerity.Windows\Legerity.Windows.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.SourceLink.GitHub" Version="8.0.0" />
  </ItemGroup>

</Project>
